{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["components/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}